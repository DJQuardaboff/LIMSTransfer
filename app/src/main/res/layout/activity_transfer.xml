<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preload_locations_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.porterlee.limstransfer.TransferActivity">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_current_location_label"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="end"
        android:paddingEnd="8dp"
        android:paddingStart="0dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/text_item_count_label"
        app:layout_constraintEnd_toStartOf="@+id/text_current_location"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_current_location"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:gravity="start"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/text_current_location_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/text_current_location_label"
        app:layout_constraintTop_toTopOf="@+id/text_current_location_label"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_item_count_label"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="end"
        android:paddingEnd="8dp"
        android:paddingStart="0dp"
        android:text="@string/text_item_count_label"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/view_divider"
        app:layout_constraintEnd_toStartOf="@+id/text_item_count"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_current_location_label"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_item_count"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="start"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/text_item_count_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/text_item_count_label"
        app:layout_constraintTop_toTopOf="@+id/text_item_count_label"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_transfer_id_label"
        style="@style/TextAppearance.AppCompat.Small.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:text="@string/text_transfer_id_label"
        app:layout_constraintTop_toTopOf="@id/text_current_location_label"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_transfer_id"
        style="@style/TextAppearance.AppCompat.Small.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/text_transfer_id_label"
        app:layout_constraintBottom_toBottomOf="@+id/text_transfer_id_label"
        app:layout_constraintStart_toEndOf="@+id/text_transfer_id_label"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_scan_barcode"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/text_scan_barcode"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/view_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar"/>

    <View
        android:id="@+id/view_divider"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorPrimaryLight"
        android:gravity="start"
        android:paddingBottom="2dp"
        android:paddingEnd="37dp"
        android:paddingStart="51dp"
        android:paddingTop="2dp"
        android:textColor="#7FFFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/item_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_item_count_label"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/item_transfer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_divider"/>

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorPrimary"
        android:max="320"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mpb_progressStyle="horizontal"
        app:mpb_useIntrinsicPadding="false"/>

    <!--android.support.v7.widget.AppCompatButton
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/-->

</android.support.constraint.ConstraintLayout>

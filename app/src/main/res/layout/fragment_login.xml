<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CustomDialogTheme"
    android:background="@drawable/dialog_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_analyst_description"
        style="@style/Base.V7.Widget.AppCompat.EditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toTopOf="@id/edit_analyst_id"
        app:layout_constraintBottom_toBottomOf="@id/edit_analyst_id"
        app:layout_constraintStart_toStartOf="@id/edit_analyst_id"
        app:layout_constraintEnd_toEndOf="@id/edit_analyst_id"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_analyst_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/text_analyst_id_hint"
        android:inputType="textVisiblePassword|textNoSuggestions"
        android:singleLine="true"
        android:imeOptions="actionNext"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_analyst_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_analyst_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/text_analyst_password_hint"
        android:inputType="textPassword"
        android:singleLine="true"
        android:imeOptions="actionGo"
        app:layout_constraintTop_toBottomOf="@+id/edit_analyst_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CustomDialogTheme"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/switch_requires_startup_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_require_startup_login"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/switch_requires_analyst_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_require_analyst_password"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/switch_requires_signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_require_startup_login"/>

</LinearLayout>
